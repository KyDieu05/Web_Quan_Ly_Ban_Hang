@using QuanLyNhaHang.Models
@model QuanLyNhaHang.Models.NhanVien
@{
    ViewBag.Title = "Thêm Mới Nhân Viên";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="page-title-container">
        <div class="row g-0">
            <div class="col-auto mb-3 mb-md-0 me-auto">
                <div class="w-auto">
                    <h1 class="mb-0 pb-0 display-4" id="title">Thêm Mới Nhân Viên</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-4">
            <div class="mb-5">
                <h2 class="small-title">Thông Tin Nhân Viên</h2>
                <div class="card">
                    <div class="card-body">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="mb-3">
                                <label class="form-label">Tên Nhân Viên</label>
                                @Html.EditorFor(model => model.TenNhanVien, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tên nhân viên..." } })
                                @Html.ValidationMessageFor(model => model.TenNhanVien, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Tài Khoản</label>
                                @Html.EditorFor(model => model.TaiKhoanNV, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tài Khoản Đăng Nhập..." } })
                                @Html.ValidationMessageFor(model => model.TaiKhoanNV, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Mật Khẩu</label>
                                @Html.EditorFor(model => model.MatKhauNV, new { htmlAttributes = new { @class = "form-control", @placeholder = "***" } })
                                @Html.ValidationMessageFor(model => model.MatKhauNV, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Ngày Sinh</label>
                                @Html.TextBoxFor(model => model.NgaySinh, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                <label class="form-label">SDT</label>
                                @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control", @placeholder = "0123456789" } })
                                @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Quyền</label>
                                @Html.DropDownListFor(model => model.MaQuyen_id, new SelectList(ViewBag.Quyen, "MaQuyen", "TenQuyen"), "-- Chọn quyền --", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MaQuyen_id, "", new { @class = "text-danger" })
                            </div>
                            <button class="btn btn-danger" type="submit">Thêm Mới</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}