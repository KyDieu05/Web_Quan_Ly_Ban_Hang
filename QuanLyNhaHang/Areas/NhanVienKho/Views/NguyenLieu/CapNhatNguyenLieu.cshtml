@model QuanLyNhaHang.Models.NguyenLieu

@{
    ViewBag.Title = "Cập nhật nguyên liệu";
    Layout = "~/Areas/NhanVienKho/Views/Shared/_LayoutNhanVienKho.cshtml";
}

<h2 class="mb-4">Cập nhật thông tin nguyên liệu</h2>

@using (Html.BeginForm("CapNhatNguyenLieu", "NguyenLieu", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.MaNguyenLieu)

    <div class="form-group mb-3">
        @Html.LabelFor(model => model.TenNguyenLieu)
        @Html.TextBoxFor(model => model.TenNguyenLieu, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(model => model.TenNguyenLieu, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(model => model.SoLuongHienCon)
        @Html.TextBoxFor(model => model.SoLuongHienCon, new { @class = "form-control", type = "number", step = "0.01", required = "required" })
        @Html.ValidationMessageFor(model => model.SoLuongHienCon, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(model => model.GiaNhapCuoi)
        @Html.TextBoxFor(model => model.GiaNhapCuoi, new { @class = "form-control", type = "number", step = "0.01", required = "required" })
        @Html.ValidationMessageFor(model => model.GiaNhapCuoi, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(model => model.GhiChu)
        @Html.TextAreaFor(model => model.GhiChu, new { @class = "form-control", rows = 3 })
        @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(model => model.MaLNL_id)
        @Html.DropDownListFor(model => model.MaLNL_id,
            (SelectList)ViewBag.LoaiNguyenLieu,
            "-- Chọn loại --",
            new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.MaLNL_id, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a href="@Url.Action("DSNguyenLieu", "NguyenLieu")" class="btn btn-secondary">Hủy</a>
}
